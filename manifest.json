{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "default_locale": "ja",
  "author": "@okhiroyuki",
  "version": "1.3.1",
  "manifest_version": 2,
  "minimum_chrome_version": "33",
  "icons": { "128": "media/icon_128.png"},
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage"
  ],
  "file_handlers": {
    "text": {
      "types": [
        "text/*"
      ]
    }
  }
}
